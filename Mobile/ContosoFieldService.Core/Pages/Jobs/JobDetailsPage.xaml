<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="ContosoFieldService.Pages.JobDetailsPage"
    BackgroundColor="#ffffff"
    Title="Job Details">
	<ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <!-- Motivational Banner --> 
                <Button 
                    Text="{Binding Name}" 
                    TextColor="#ffffff" 
                    HeightRequest="50"
                    BackgroundColor="#D83E01" 
                    BorderRadius="0" 
                    FontFamily="AvenirNext-Medium">
                    <Button.FontSize>
                        <OnPlatform x:TypeArguments="x:Double">
                          <On Platform="iOS" Value="18" />
                          <On Platform="Android" Value="16" />
                        </OnPlatform>
                    </Button.FontSize>
                </Button>


                <StackLayout Orientation="Vertical" Padding="15,5,5,15" BackgroundColor="#ffffff">

                    <!-- Overview -->
                    <StackLayout Orientation="Horizontal">
                        <Label 
                            Text="Overview" 
                            TextColor="#212121" 
                            FontFamily="AvenirNext-Medium" 
                            FontSize="20" 
                            HorizontalOptions="Start" />
                    </StackLayout>

                    <!-- Jobs Completed -->
                    <StackLayout Orientation="Horizontal">
                
                        <StackLayout Orientation="Vertical">
                            <Label 
                                Text="1 Week" 
                                TextColor="#D83E01" 
                                FontSize="17" 
                                FontFamily="AvenirNext-Medium"
                                HorizontalTextAlignment="Start" />
                            <Label 
                                Text="Age" 
                                FontFamily="AvenirNext-Regular" 
                                Margin="0,-5,0,0" TextColor="#777777" 
                                HorizontalTextAlignment="Start" 
                                FontSize="12" />
                        </StackLayout>
                    </StackLayout>

                    <!-- 747 Engines Services -->
                     <StackLayout Orientation="Horizontal" Margin="0,5,0,0">
                        <StackLayout Orientation="Vertical">
                            <Label 
                                Text="Today" 
                                TextColor="#D83E01" 
                                FontFamily="AvenirNext-Medium" 
                                FontSize="17" />
                            <Label 
                                Text="Due Date" 
                                FontFamily="AvenirNext-Regular" 
                                Margin="0,-5,0,0" 
                                TextColor="#777777" 
                                HorizontalTextAlignment="Center" 
                                FontSize="12" />
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
                <BoxView HeightRequest="1" BackgroundColor="#777777" Opacity="0.2"  ></BoxView>
                
               <StackLayout Orientation="Vertical" Padding="15,5,5,15" BackgroundColor="#ffffff">

                    <!-- Details -->
                    <StackLayout Orientation="Horizontal">
                        <Label 
                            Text="Details" 
                            TextColor="#212121" 
                            FontFamily="AvenirNext-Medium" 
                            FontSize="20" 
                            HorizontalOptions="Start" />
                    </StackLayout>

                    <Editor
                        Text="{Binding Details}"
                        TextColor="#838383" 
                        FontFamily="AvenirNext-Regular" 
                        FontSize="17" 
                    ></Editor>

            </StackLayout>
            </StackLayout>
           
        </ScrollView>
	</ContentPage.Content>
</ContentPage>
